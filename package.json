{
  "name": "project-name",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start-dev": "nest start --watch",
    "node": "ts-node native_node_servers/simple_server.ts",
    "node-cluster": "ts-node native_node_servers/cluster_server/cluster_server.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint --debug src/",
    "lint:fix": "eslint \"{src,front,apps,libs,test}/**/*.{ts,tsx}\" --fix",
    "prettier": "prettier --write {src,front}/**/*.{ts,tsx}",
    "typeorm": "typeorm-ts-node-esm",
    "c1": "npm run typeorm migration:create ./src/migrations/create",
    "g1": "npm run typeorm migration:generate ./src/migrations/create -- -d ./src/data-source/",
    "r1": "npm run typeorm migration:run -- -d ./src/data-source/",
    "rv1": "npm run typeorm migration:revert -- -d ./src/data-source/",
    "docker-start": "docker compose up -d redis_service postgres_service mongo_service",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": [
      "npm run prettier",
      "npm run lint:fix",
      "git add"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "dotenv": "^16.4.7",
    "file-type": "^15.0.1",
    "mongodb": "^5.9.2",
    "pg": "^8.13.1",
    "react": "^19.0.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-ts-node-commonjs": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^15.4.1",
    "prettier": "^2.8.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
